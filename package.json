{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna exec tsc",
    "build:watch": "lerna exec tsc --parallel -- --watch",
    "commit": "git-cz",
    "lint": "eslint packages/*/src/*.ts",
    "lint:fix": "eslint packages/*/src/*.ts --fix",
    "lock:check": "yarn-deduplicate --list",
    "lock:fix": "yarn-deduplicate",
    "release": "semantic-release",
    "report:coverage": "codecov",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:modified": "jest --bail --findRelatedTests",
    "test:watch": "jest --watch --notify"
  },
  "devDependencies": {
    "@tophat/commitizen-adapter": "^0.0.11",
    "@tophat/commitlint-config": "^0.1.2",
    "@tophat/eslint-config": "^0.4.0",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.1",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.8.0",
    "codecov": "^3.6.1",
    "commitizen": "^4.0.3",
    "commitlint": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.2.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lerna": "^3.18.4",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "semantic-release": "^15.14.0",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4",
    "yarn-deduplicate": "1.1.1"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleDirectories": [
      "./packages/*/src/",
      "./packages/*/tests/",
      "./node_modules"
    ],
    "testPathIgnorePatterns": [
      "./artifacts/",
      "./node_modules/"
    ],
    "coverageDirectory": "./artifacts/coverage"
  },
  "commitlint": {
    "extends": [
      "@tophat/commitlint-config"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@tophat/commitizen-adapter"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      "./lib/semantic-release-lerna"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint",
      "yarn test:modified"
    ],
    "yarn.lock": [
      "yarn lock:check"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
